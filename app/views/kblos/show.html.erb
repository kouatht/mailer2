<header>
    <p><%= link_to "ホーム", kblos_path %></p>
</header>
<h1>つぶやき詳細画面</h1>
<p>内容: <%= @kblo.content %></p>
<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @kblo.image.url %>
</p>

<%= link_to 'Edit', edit_kblo_path(@kblo) %> |
<%= link_to 'Back', kblos_path %>

<% unless @kblo.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(kblo_id: @kblo.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'つぶやき一覧画面に戻る', kblos_path %>
